        <record model="ir.ui.view" id="ineco_wht_pnd_form">
            <field name="name">ineco.wht.pnd.form</field>
            <field name="model">ineco.wht.pnd</field>
            <field name="arch" type="xml">
                <form string="WHT PND">
                    <header>
                        <button name="export_pnd3" string="Export ภงด.3" type="object" states="draft"/>
                        <button name="button_draft" string="To draft" type="object" states="cancel"/>
                        <button name="button_cancel" string="Cancel" type="object" states="post,draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,post,cancel"/>
                        <!--						<button name="export_pnd3_additional" string="Export ภงด.3 (พิเติม)" type="object" />-->
                    </header>
                    <sheet>
                        <h1>
                            <label string="No." for="name"/>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="account_fiscal_year"
                                       options="{'color_field': 'color', 'no_create_edit': True}"/>
                                <field name="account_period" required="1"
                                       options="{'color_field': 'color', 'no_create_edit': True}"/>
                                <field name="date_pnd"/>
<!--                                <field name="type_normal"/>-->
<!--                                <field name="type_special"/>-->
                                <field name="wht_filing"/>
                                <field name="type_no"/>
                                <field name="company_id" invisible="1"/>
                                <field name="file_save" filename="file_name"/>
                                <field name="file_name"/>
                            </group>
                            <group>
                                <field name="section_3"/>
                                <field name="section_48" attrs="{'invisible': [('pnd_type', '!=', 'pp4')]}"/>
                                <field name="section_50" attrs="{'invisible': [('pnd_type', '!=', 'pp4')]}"/>
                                <field name="section_65" attrs="{'invisible': [('pnd_type', '!=', 'pp7')]}"/>
                                <field name="section_69" attrs="{'invisible': [('pnd_type', '!=', 'pp7')]}"/>
                                <field name="pnd_type" invisible="1"/>
                                <field name="attach_pnd"/>
                                <field name="attach_count"/>
                                <field name="attach_no"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="wht_id" domain="[('wht_type','=','purchase'),('wht_kind','=','pp4')]"
                                       readonly="1">
                                    <tree string="WHT PND3 Lines">
                                        <field name="name"/>
                                        <field name="date_doc"/>
                                        <field name="partner_id"/>
                                        <field name="base_amount"/>
                                        <field name="tax"/>
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                    </group>
                                    <group>
                                        <field name="total_amount"/>
                                        <field name="total_tax"/>
                                        <field name="add_amount"/>
                                        <field name="total_tax_send" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Note">
                                <field name="note" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

